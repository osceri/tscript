function level_fix(name, count_func, action_func, lower, upper)
  level = count_func()
  
  if level < lower then
    write(name, "level being fixed ..")
    while level < upper do
      if not(action_func()) then
        print(" failed.")
        return false
      end
      write(".")
      level = count_func()
    end
    print(" succeeded.")
  end
  
  return true
end

function level_check(name, count_func, action_func, lower, upper)
  level = count_func()
  
  print(name, "level:", count_func())
  
  if level < lower then
    return false
  end
  
  return true
end
