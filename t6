function vibe_check(lower, upper)
  level = turtle.getFuelLevel()
  print("Current fuel level: ", level)
  
  if level < lower then
    print("Fuel level below threshold (", lower, ")!")
    write("Refueling")
    while level < upper do
      if not(turtle.refuel()) then
        print(" Failed.")
        return false
      end
      write(".")
      level = turtle.getFuelLevel()
    end
    print(" Succeeded.")
  end
  
  return true
end
