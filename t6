function print_fuel_level()
  print("Fuel level: ", turtle.getFuelLevel())
end

function vibe_check(lower, upper)
  level = turtle.getFuelLevel()
  print_fuel_level()
  
  if level < lower then
    print("Fuel level below threshold (", lower, ")!")
    write("Refueling ..")
    while level < upper do
      if not(turtle.refuel(4)) then
        print(" failed.")
        print_fuel_level()
        return false
      end
      write(".")
      level = turtle.getFuelLevel()
    end
    print(" succeeded.")
    print_fuel_level()
  end
  
  return true
end
